<div class="row ">
  <div class="col-xs-12">
      <button class="btn btn-block bg-kuler2 connect-facebook-button">Connect Facebook Account</button></div>
<div class="col-xs-12">
<form class="form-horizontal first-time-visitor-form bg-kuler4 kuler2" action="http://localhost:8888/api/visitors" method="post">
<fieldset>

<!-- Form Name -->
<legend class="kuler2">First Time Visitor</legend>

<!-- Text input-->
<div class="form-group">
  <label class="col-xs-4 control-label" for="name">Name</label>  
  <div class="col-xs-8">

  <input id="name" name="name" type="text" placeholder="Joe User" class="form-control input-md" required="">
    
  </div>
</div>


<!-- Text input-->
<div class="form-group">
  <label class="col-xs-4 control-label" for="email">Email</label>  
  <div class="col-xs-8">
  <input id="email" name="email" type="text" placeholder="joe.user@gmail.com" class="form-control input-md" required="">
    
  </div>
</div>

<!-- Text input-->
<div class="form-group">
  <label class="col-xs-4 control-label" for="telephone">Telephone</label>  
  <div class="col-xs-8">
  <input id="telephone" name="telephone" type="text" placeholder="888-555-2232" class="form-control input-md">

  </div>
</div>

<!-- Select Basic -->
<div class="form-group">
  <label class="col-xs-4 control-label" for="selectResident">Friend Of</label>
  <div class="col-xs-8">
    <select id="selectResident" name="selectResident" class="form-control">
  <option selected value="default">Choose a Connection</option>
      {{{debug}}}
      {{#each this}}
      <option value="{{name}}">{{name}}</option>

      {{/each }}
       <option  value="indirect">Indirect Connection</option>
    
     
    </select>
  </div>
</div>

<!-- Text input-->
<div class="form-group indirect-connection-row">
  <label class="col-xs-4 control-label" for="indirectConnection">Connection</label>  
  <div class="col-xs-8">
  <input id="indirectConnection" name="indirectConnection" type="text" placeholder="Who / what brings you here tonight?" class="form-control input-md">
    
  </div>
</div>

<!-- Textarea -->
<div class="form-group">
  <label class="col-xs-4 control-label" for="about">About You</label>
  <div class="col-xs-8">                     
    <textarea class="form-control" id="about" name="about" placeholder="business, goals, dreams"></textarea>
  </div>
</div>

<!-- Password input-->
<div class="form-group">
  <label class="col-xs-4 control-label" for="password">Password</label>
  <div class="col-xs-8">
    <input id="password" name="password" type="password" placeholder="password" class="form-control input-md" required="">
    
  </div>
</div>

<!-- Password input-->
<div class="form-group">
  <label class="col-xs-4 control-label" for="confirmPassword">Confirm Password</label>
  <div class="col-xs-8">
    <input id="confirmPassword" name="confirmPassword" type="password" placeholder="confirm password" class="form-control input-md" required="">
    
  </div>
</div>

<!-- Multiple Checkboxes (inline) -->
<div class="form-group">
  <label class="col-xs-4 control-label" for="newsletter"></label>
  <div class="col-xs-8">
    <label class="checkbox-inline" for="newsletter-0">
      <input type="checkbox" name="newsletter" id="newsletter-0" value="Sign me up for the newsletter">
      Sign me up for the newsletter
    </label>
  </div>
</div>

<!-- Button -->
<div class="form-group">
  <label class="col-xs-4 control-label" for="submit"></label>
  <div class="col-xs-4">
    <button id="submit" name="submit" class="btn btn-default">Submit</button>
  </div>

</div>

</fieldset>
</form>

</div>

</div>
